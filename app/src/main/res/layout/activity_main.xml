<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activitymain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCalendar"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="593dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#cfcfc3"
        android:drawableTint="@color/phinmagray"
        android:hint="INSERT TIME &amp; DATE"
        android:textAlignment="center"
        android:textColor="#767778"
        android:textSize="12sp"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/TopPanelDivider"
        android:layout_width="fill_parent"
        android:layout_height="2.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:background="#767778"
        android:contentDescription="TODO"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />

    <RelativeLayout
        android:id="@+id/HomeMainPanel"
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-34dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#23673F"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btnMyGoals"
            android:layout_width="450dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="372dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#212a63"
            android:drawableStart="@drawable/baseline_flag_black_24"
            android:drawableTint="@color/phinmagray"
            android:padding="22dp"
            android:text=" My Goals"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnMyTasks"
            android:layout_width="400dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="226dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#212a63"
            android:drawableStart="@drawable/baseline_check_circle_black_24"
            android:drawableTint="@color/phinmagray"
            android:padding="22dp"
            android:text=" My Tasks"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnMyHabits"
            android:layout_width="400dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="78dp"
            android:background="@drawable/roundstyle"
            android:backgroundTint="#212A63"
            android:drawableStart="@drawable/baseline_rocket_launch_black_24"
            android:drawableTint="@color/phinmagray"
            android:padding="22dp"
            android:text=" My Habits"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/MyDashboardText"
            android:layout_width="114dp"
            android:layout_height="21dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="134dp"
            android:layout_marginTop="7dp"
            android:clickable="false"
            android:text="My Dashboard"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:typeface="sans" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/HomeTopPanel"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="194dp"
            android:layout_height="30dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-condensed"
            android:text="UoP-AGILE"
            android:textColor="#767778"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toEndOf="@+id/logophinma" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="194dp"
            android:layout_height="24dp"
            android:layout_marginStart="7dp"
            android:fontFamily="sans-serif-light"
            android:text="PHINMA Productivity Manager"
            android:textColor="#546E7A"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/logophinma"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.07999998" />

        <ImageView
            android:id="@+id/logophinma"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/logophinma"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/btnAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:clickable="true"
            android:contentDescription="About Us"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.541"
            app:srcCompat="@drawable/baseline_info_outline_black_24dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>