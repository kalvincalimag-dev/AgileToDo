<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutPG"
    android:background="@color/pastelgray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentsGoals.PersonalFragmentG">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submitPersonalGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#767778"
        android:clickable="true"
        android:contentDescription="FAB: Add Personal Goal"
        android:elevation="0dp"
        android:src="@drawable/baseline_add_circle_24"
        app:backgroundTint="@android:color/transparent"
        app:elevation="0dp"
        app:maxImageSize="66dp" />

    <RadioButton
        android:id="@+id/displayPersonalGoal"
        android:layout_width="395dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/white"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/displayPersonalGoal2"
        android:layout_width="395dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="7dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/border"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp" />

    <RadioButton
        android:id="@+id/displayPersonalGoal3"
        android:layout_width="395dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/border"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editPersonalGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:hint="e.g. Lose 20 Pounds" />

</RelativeLayout>